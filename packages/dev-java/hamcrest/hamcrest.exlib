hamcrest_src_install() {
    einfo "Collecting jar files..."
    ant_src_install

    einfo "Installing jar files..."
    set_install_dir /usr/share/${PN}

    for JAR_FILE in "${WORK}"/output/dist/lib/*.jar; do
        install_file_as "${JAR_FILE}" $(basename ${JAR_FILE/-${PV}})
    done
}

