require junit [ archive_jar_file="src.jar" ]

# JUnit 3.x.x ships no "build.xml" file. Insanity.
enable_build_xml_creation

# See the newest exheres for SLOT commentary.
SLOT="3"
PLATFORMS="~amd64 ~x86"

# Relative path under "${WORK}" to additional subdirectories having JUnit
# documentation.
DEFAULT_SRC_INSTALL_EXTRA_DOCS=( "doc/Changes34.html" "doc/JUnitProperties.html" )

